{
  "private": true,
  "displayName": "Homebridge Ambient Weather Sensor",
  "name": "@b9/homebridge-ambient-weather",
  "version": "0.0.1",
  "description": "This is a weather plugin to connect your PWS to homebridge",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/B9Ingenieria/homebridge-ambient-weather.git"
  },
  "bugs": {
    "url": "https://github.com/B9Ingenieria/homebridge-ambient-weather/issues"
  },
  "engines": {
    "node": ">=14.18.1",
    "homebridge": ">=1.3.5"
  },
  "main": "dist/index.js",
